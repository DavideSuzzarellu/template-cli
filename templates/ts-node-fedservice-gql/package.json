{
  "name": "gql-service-template",
  "version": "1.0.0",
  "description": "The service template",
  "author": "Leonardo Roese",
  "license": "MIT",
  "scripts": {
    "gen-env": "gen-env-types .env -o src/env.d.ts -e .",
    "start": "nodemon --config nodemon.json src/index.ts",
    "watch": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "lint": "eslint .",
    "lint:fix": "yarn prettier:write && yarn run eslint:fix",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier -l . --config .prettierrc",
    "prettier:write": "prettier -l --write . --config .prettierrc",
    "test": "jest --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@apollo/federation": "^0.21.0",
    "apollo-server": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dataloader": "^2.0.0",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.30",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@types/dotenv-safe": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "gen-env-types": "^1.0.5",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "prettier-eslint-cli": "^5.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
